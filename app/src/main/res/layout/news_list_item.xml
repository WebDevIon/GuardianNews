<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/list_item_style">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/article_date"
            style="@style/date_text_style"
            tools:text="@string/date_test_placeholder"/>

        <TextView
            android:id="@+id/article_section"
            style="@style/category_text_style"
            tools:text="@string/section_test_placeholder"/>

    </LinearLayout>

    <TextView
        android:id="@+id/aricle_title"
        style="@style/title_text_style"
        tools:text="@string/title_test_placeholder"/>

</LinearLayout>